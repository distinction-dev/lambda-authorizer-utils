{
  "name": "@distinction-dev/backend-package-name",
  "version": "0.0.0-development",
  "description": "Template repository for us to use to create TS based backend packages",
  "scripts": {
    "clean": "rm -rf ./lib/",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "cm": "cz",
    "coverage": "codecov",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "type-check": "tsc --noEmit"
  },
  "main": "./lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distinction-dev/package-name.git"
  },
  "license": "MIT",
  "author": {
    "name": "Himanshu Pant",
    "email": "himanshupant127@gmail.com",
    "url": "https://github.com/killdozerx2"
  },
  "keywords": [
    "firebase",
    "frontend",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/distinction-dev/package-name/issues"
  },
  "homepage": "https://github.com/distinction-dev/package-name#readme",
  "devDependencies": {
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.9.0-dev.20220916"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}