{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ES6", "DOM"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib",
    "declarationDir": "./lib/types"
  },
  "include": ["src/**/*.ts"]
}
